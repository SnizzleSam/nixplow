<%= form_for @user do |f|%>
    <% if @user.errors.any? %>
        <div>
            <h3><%= pluralize(@user.errors.count, "error") %> prohibited this animal from being saved: </h3>
            <ul>
                <% @user.errors.full_messages.each do |m| %>
                    <li><%= m %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <table>
        <tr>
            <td><%= f.label :username %></td>
            <td><%= f.text_field :username, class: "form-control" %></td>
        </tr>
        
        <tr>
            <td><%= f.label "Address(Street, City, Province, Country)" %></td>
            <td><%= f.text_field :address, class: "form-control"%></td>
        </tr>
        <tr>
            <td><%= f.label "Description (contact info, etc)" %></td>
            <td><%= f.text_area :description, class: "form-control"%></td>
        </tr>
        <% if @type == "ShovelUser" %>
        <tr>
            <td><%= f.label "Price/hour" %></td>
            <td><%= f.number_field :price, class: "form-control"%></td>
        </tr>
        <% end %>
        <tr>
            <td><%= f.label :password %></td>
            <td><%= f.password_field :password, class: "form-control" %></td>
        </tr>
        <tr>
            <td><%= f.label :password_confirmation %></td>
            <td><%= f.password_field :password_confirmation, class: "form-control" %></td>
        </tr>
        <tr>
            <td><%= f.submit "Become a User", :class => "btn btn-success"%></td>
        </tr>
    </table>
<% end %>